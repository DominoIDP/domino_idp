        xsi:schemaLocation="urn:mace:shibboleth:2.0:afp http://shibboleth.net/schema/idp/shibboleth-afp.xsd">

	<!-- This policy releases all attributes to all known SPs and is for demo use only -->
	<AttributeFilterPolicy id="release-everything">
	    <PolicyRequirementRule xsi:type="ANY" />

            <AttributeRule attributeID="departmentNumber" permitAny="true" />
            <AttributeRule attributeID="employeeNumber" permitAny="true" />
            <AttributeRule attributeID="employeeType" permitAny="true" />
            <AttributeRule attributeID="homePhone" permitAny="true" />
            <AttributeRule attributeID="initials" permitAny="true" />
            <AttributeRule attributeID="mail" permitAny="true" />
            <AttributeRule attributeID="mobile" permitAny="true" />
            <AttributeRule attributeID="o" permitAny="true" />
            <AttributeRule attributeID="ou" permitAny="true" />
            <AttributeRule attributeID="pager" permitAny="true" />
            <AttributeRule attributeID="homePostalAddress" permitAny="true" />
            <AttributeRule attributeID="postalCode" permitAny="true" />
            <AttributeRule attributeID="sn" permitAny="true" />
            <AttributeRule attributeID="st" permitAny="true" />
            <AttributeRule attributeID="telephoneNumber" permitAny="true" />
            <AttributeRule attributeID="title" permitAny="true" />
            <AttributeRule attributeID="uid" permitAny="true" />
            <AttributeRule attributeID="postalAddress" permitAny="true" />
            <AttributeRule attributeID="l" permitAny="true" />
            <AttributeRule attributeID="displayName" permitAny="true" />
            <AttributeRule attributeID="givenName" permitAny="true" />
	</AttributeFilterPolicy>

</AttributeFilterPolicyGroup>
